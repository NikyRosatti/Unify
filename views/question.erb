<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <title>Pregunta</title>
  </head>
  <body>
    <div class="container">
      <h1><%= @current_question['question'] %></h1>
      <form action="/next_question" method="post">
        <% @current_question['options'].each_with_index do |option, index| %>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="selected_option" value="<%= option %>" id="option<%= index %>">
            <label class="form-check-label" for="option<%= index %>">
              <%= option %>
            </label>
          </div>
        <% end %>
        <button type="submit" class="btn btn-primary">Siguiente</button>
      </form>
      <% if @message %>
        <p><%= @message %></p>
      <% end %>
    </div>
  </body>
</html>
