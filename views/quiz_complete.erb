<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
      body {
        background-color: #f8f9fa;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }
      .container {
        text-align: center;
        max-width: 600px;
      }
      .chart-container {
        position: relative;
        align-items: center;
        justify-content: center;
        height: 300px; /* Altura del gráfico */
        width: 100%; /* Ancho del gráfico */
        max-width: 400px; /* Tamaño máximo del gráfico */
        margin: 0 auto; /* Centra el gráfico horizontalmente */
      }
      h1 {
        margin-bottom: 20px;
        color: #000000;
        text-align: center;
      }
      p {
        margin-bottom: 20px;
        color: #6c757d;
        text-align: center;
      }
    </style>
    <title>Complete Quiz</title>
  </head>
  <body>
    <div class="container">
      <h1>Well done! </h1>
      <h1>You have completed the quiz!</h1>
      <p>Keep practicing...</p>
      <div class="chart-container">
        <canvas id="resultChart"></canvas>
      </div>
    </div>

    <script>
      var ctx = document.getElementById('resultChart').getContext('2d');
      var correctAnswers = <%= @correct_answers %>;
      var incorrectAnswers = <%= @incorrect_answers %>;

      var resultChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
          labels: ['Correctas', 'Incorrectas'],
          datasets: [{
            label: 'Respuestas',
            data: [correctAnswers, incorrectAnswers],
            backgroundColor: [
              'rgb(47, 221, 128)', // Verde para correctas
              'rgb(255, 0, 0)'  // Rojo más fuerte para incorrectas
            ],
            borderColor: [
              'rgb(37, 135, 83)',
              'rgb(255, 0, 0)'
            ],
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              position: 'top',
              labels: {
                font: {
                  size: 14
                }
              }
            },
            tooltip: {
              enabled: true,
              callbacks: {
                label: function(tooltipItem) {
                  let label = tooltipItem.label || '';
                  let value = tooltipItem.raw;
                  let percentage = ((value / (correctAnswers + incorrectAnswers)) * 100).toFixed(2);
                  return `${label}: ${value} (${percentage}%)`;
                }
              }
            }
          }
        }
      });
    </script>
  </body>
</html>
